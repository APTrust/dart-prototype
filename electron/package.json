{
    "name": "DART",
    "version": "0.1.9",
    "description": "Package BagIt files and ship them to S3.",
    "main": "main.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/APTrust/dart.git"
    },
    "license": "Apache-2.0",
    "dependencies": {
        "archiver": "^3.0.0",
        "asar": "^0.14.3",
        "dateformat": "^3.0.3",
        "electron-context-menu": "^0.9.1",
        "electron-log": "^2.2.14",
        "electron-store": "^1.3.0",
        "handlebars": "^4.1.2",
        "minio": "^7.0.3",
        "require-dir": "^0.3.2",
        "tar-stream": "git+https://github.com/APTrust/tar-stream.git",
        "tmp": "0.0.33"
    },
    "devDependencies": {
        "electron": "^2.0.18",
        "electron-builder": "^19.56.2",
        "electron-rebuild": "^1.7.3",
        "electron-toolkit": "^1.0.24",
        "tape": "^4.9.0"
    },
    "scripts": {
        "electron-toolkit": "electron ./node_modules/electron-toolkit",
        "start": "electron .",
        "release": "build"
    },
    "build": {
        "appId": "com.electron.DART",
        "copyright": "Copyright Â© 2018 APTrust",
        "productName": "DART",
        "electronVersion": "1.8.4",
        "asar": true,
        "directories": {
            "output": "dist"
        },
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "category": "public.app-category.productivity"
        }
    }
}
